<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:mapbox="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg_degraded">

    <LinearLayout
        android:id="@+id/driver_main_content_progress"
        style="@style/LinearProgress">

        <ProgressBar
            android:id="@+id/progress"
            style="@style/ProgressBar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
        </android.support.design.widget.AppBarLayout>


        <ScrollView
            android:id="@+id/driver_main_content_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/driver_main_content_relative"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/passenger_main_content_realtive"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@color/colorPrimaryTranslucent">

                    <com.mapbox.mapboxsdk.maps.MapView
                        android:id="@+id/passenger_main_content_map"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        mapbox:mapbox_cameraTargetLat="38.9098"
                        mapbox:mapbox_cameraTargetLng="-77.0295"
                        mapbox:mapbox_cameraZoom="12" />

                    <EditText
                        android:id="@+id/passenger_main_content_destiny"
                        style="@style/dataMap"
                        android:hint="@string/introduceDestiny"
                        android:theme="@style/ThemeData" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/driver_main_content_linear1"
                    android:layout_below="@+id/passenger_main_content_realtive"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="20dp"
                    style="@style/VerticalLinear">

                    <TextView

                        style="@style/SubTittleDriveMain"
                        android:textAlignment="textStart"
                        android:hint="@string/origin"
                        android:text="@string/addOriginToRoute" />

                    <AutoCompleteTextView
                        android:id="@+id/driver_main_content_autoComplete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:hint="@string/origin"
                        android:ems="10"
                        style="@style/DataLogin"/>

                </LinearLayout>

                <Button
                    android:id="@+id/passenger_main_content_button"
                    android:layout_below="@+id/driver_main_content_linear1"
                    android:text="@string/searchRoute"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="70dp"
                    android:layout_marginHorizontal="20dp"
                    style="@style/ButtonBigRound"/>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
