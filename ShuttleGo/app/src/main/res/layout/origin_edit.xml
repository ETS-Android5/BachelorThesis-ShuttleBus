<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg_degraded">

    <LinearLayout
        style="@style/LinearProgress">

        <ProgressBar
            android:id="@+id/origin_edit_progress"
            style="@style/ProgressBar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/origin_edit_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:title="@string/editOrigin"/>
        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"
            style="@style/VerticalLinear">

            <TextView
                style="@style/SubTittleDriveMain"
                android:textAlignment="textStart"
                android:hint="@string/origin"
                android:text="@string/newOrigin" />

            <EditText
                android:id="@+id/origin_edit_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:hint="@string/origin"
                android:ems="10"
                style="@style/DataLogin"/>
        </LinearLayout>

        <Button
            android:id="@+id/origin_edit_edit_btn"
            style="@style/ButtonDeleteOrigin"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="250dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/edit"/>

        <Button
            android:id="@+id/origin_edit_cancel_btn"
            style="@style/ButtonBigRound"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/cancel"/>
    </LinearLayout>
</LinearLayout>