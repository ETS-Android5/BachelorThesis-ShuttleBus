<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_degraded"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        style="@style/LinearProgress">

        <ProgressBar
            android:id="@+id/origin_main_progress"
            style="@style/ProgressBar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/origin_main_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            style="@style/AppBarLayout">

            <android.support.v7.widget.Toolbar
                android:id="@+id/origin_main_toolbar"
                style="@style/AppBarLayout"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:title="@string/origin"/>
        </android.support.design.widget.AppBarLayout>

        <TextView
            android:id="@+id/origin_main_text"
            style="@style/TittleWelcome"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:text="Origen Prueba"/>
        <Button
            android:id="@+id/origin_main_edit_btn"
            style="@style/ButtonBigRound"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="240dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/edit"/>

        <Button
            android:id="@+id/origin_main_delete_btn"
            style="@style/ButtonDeleteOrigin"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/delete"/>

        <Button
            android:id="@+id/origin_main_close_btn"
            style="@style/ButtonBigRound"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/close"/>
    </LinearLayout>
</LinearLayout>